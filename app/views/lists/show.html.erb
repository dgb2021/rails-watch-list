<nav class="bg-dark navbar-dark">
  <div class="container">
    <a href="" class="navbar-brand"><i class="fas fa-film mr-2"></i> <%= @list.name %></a>
  </div>
</nav>

<section id="header" class="jumbotron text-center">
  <h1 class="display-3"> <%= @list.name %></h1>
    <p class="lead">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</p>
      <button class="btn btn-outline-success"><%= link_to 'Home', lists_path %></button>
      <button class="btn btn-outline-success" type="button"><%= link_to 'New List', new_list_path %></button>
</section>
  
<div class="container">
  <div class="row justify-content-center mt-2">
    <div class="col-4 col-offset-">
      <%= simple_form_for [@list, @bookmark], method: :post, url: list_bookmarks_path(@list) do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

<div  class="container py-5"  >  
  <div class="row">
    <div class="col-4 colsm-6 col-md-4 mb-3">
      
      <% @list.movies.each do |movie| %>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        
        <img src="<%= movie.poster_url %>" alt="" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"> <%= movie.overview %> </p>
              <a href="" class="btn btn-outline-success btn-sm">Read More</a>
              <a href="" class="btn btn-outline-danger btn-sm"><i class="far fa-heart"></i></a>
          </div>
        <% end %>  
        
    </div>
  </div>
</div>






